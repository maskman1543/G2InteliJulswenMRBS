@model ASI.Basecode.Services.ServiceModels.RoomViewModel

@{
    ViewData["Title"] = "Delete Room";
}

<link rel="stylesheet" href="~/css/deletemodal.css" />
<div class="modal fade" id="deleteRoomModal" tabindex="-1" role="dialog" aria-labelledby="deleteRoomModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-bold" id="deleteRoomModalLabel">Confirmation</h5>
            </div>
            <div class="modal-body">
                <h7>Are you sure you want to delete this room?</h7>

                <form id="deleteRoomForm" method="post">
                    <input type="hidden" asp-for="Id" />

                    <!-- Modal Footer -->
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-danger1" style="color: black;">Delete</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="color: black;">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
