@model IEnumerable<ASI.Basecode.Services.ServiceModels.UserViewModel>

@{
    ViewData["Title"] = "UserManagement";
    Context.Session.SetString("IsUserManagementActive", "true");
}

<div class="list-container">
    <!-- Linking stylesheets -->
    <link href="~/css/dashboards.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <!-- Heading and Add User button -->
    <div class="header d-flex align-items-center mb-3">
        <h1 class="title">User List</h1>
        <div class="search-bar">
            <input type="text" placeholder="Search..." />
            <button class="search-button">
                <i class="fas fa-search"></i>
            </button>
        </div>
        <a asp-controller="User" asp-action="Create" class="btn btn-add">
            <i class="fas fa-user-plus"></i> Add User
        </a>
    </div>

    <!-- User List Table -->
    <div class="list-table">
        <div class="table-header">
            <span>Username</span>
            <span>Name</span>
            <span>Role</span>
            <span>Actions</span>
        </div>

        <div class="table-body">
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <div class="table-row">
                        <span>@item.UserId</span>
                        <span>@item.Name</span>
                        <span>@item.Roles</span> <!-- Ensure 'Role' is the correct property name -->
                        <div class="actions">
                            <!-- Edit Button -->
                            <form asp-controller="User" asp-action="Edit" asp-route-id="@item.Id" method="get" style="display:inline;">
                                <button type="submit" class="btn btn-warning">
                                    <i class="fas fa-pencil"></i> Edit
                                </button>
                            </form>

                            <!-- Delete Button -->
                            <form asp-controller="User" asp-action="SoftDelete" asp-route-id="@item.Id" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">
                                    <i class="fas fa-trash"></i> Delete
                                </button>
                            </form>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="no-item text-center">No users found.</div>
            }
        </div>
    </div>
</div>
