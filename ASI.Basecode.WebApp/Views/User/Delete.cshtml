@model ASI.Basecode.Services.ServiceModels.UserViewModel

@{
    ViewData["Title"] = "Delete User";
}

<!-- Modal HTML structure -->
<div class="modal fade" id="deleteUserModal" tabindex="-1" role="dialog" aria-labelledby="deleteUserModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteUserModalLabel">Delete User</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h3>Are you sure you want to delete this user?</h3>
                <div>
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.UserId)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.UserId)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                    </dl>
                </div>
                <form id="deleteUserForm" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a href="@Url.Action("UserManagement")" class="btn btn-secondary" data-dismiss="modal">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        $(document).on("submit", "#deleteUserForm", function (event) {
            event.preventDefault(); // Prevent the default form submission

            $.ajax({
                url: '@Url.Action("SoftDelete", "User")', // The action method to perform soft delete
                type: 'POST',
                data: $(this).serialize(), // Serialize the form data to send with the request
                success: function (response) {
                    if (response.success) {
                        toastr.success("User deleted successfully!"); // Show success message
                        $('#deleteUserModal').modal('hide'); // Close the modal

                        // Redirect to the User Management page
                        window.location.href = response.redirectUrl;
                    } else {
                        toastr.error(response.message); // Show error message
                    }
                },
                error: function () {
                    toastr.error("An unexpected error occurred.");
                }
            });
        });
    </script>
}
