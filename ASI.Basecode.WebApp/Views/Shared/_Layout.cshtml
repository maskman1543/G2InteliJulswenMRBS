@using static ASI.Basecode.Resources.Views.Screen

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
    @RenderSection("Styles", required: false)
</head>
<body>
    @Html.Partial("_Header")

    <div style="display: flex; min-height: 100vh;">
        @if (!(ViewContext.RouteData.Values["Controller"].ToString() == "Account" &&
        (ViewContext.RouteData.Values["Action"].ToString() == "Login" ||
        ViewContext.RouteData.Values["Action"].ToString() == "Register")))
        {
            <!-- Sidebar -->
            <aside style="width: 250px; background-color: #B1A05D; padding: 20px; border-radius: 15px;">
                

                <nav style="display: flex; flex-direction: column; gap: 10px;">
                    <a href="/AdminDashboard" style="color: #000; font-weight: bold; text-decoration: none; padding: 10px; background-color: #8E774D; border-radius: 8px;">Dashboard</a>
                    <a href="/Users" style="color: #000; font-weight: bold; text-decoration: none; padding: 10px; background-color: #D8C582; border-radius: 8px;">Users</a>
                    <a href="/Rooms/Index" style="color: #000; font-weight: bold; text-decoration: none; padding: 10px; background-color: #D8C582; border-radius: 8px;">Manage Rooms</a>
                    <a href="/Bookings" style="color: #000; font-weight: bold; text-decoration: none; padding: 10px; background-color: #D8C582; border-radius: 8px;">Bookings</a>
                    <a href="/Analytics" style="color: #000; font-weight: bold; text-decoration: none; padding: 10px; background-color: #D8C582; border-radius: 8px;">Analytics</a>
                    <a href="/Settings" style="color: #000; font-weight: bold; text-decoration: none; padding: 10px; background-color: #D8C582; border-radius: 8px;">Settings</a>
                </nav>

                <a href="/Account/Logout" style="margin-top: 20px; color: #000; font-weight: bold; text-decoration: none; padding: 10px; display: block; background-color: #8E774D; border-radius: 8px;">Log out</a>
            </aside>
        }

        <!-- Main Content -->
        <div class="container" style="flex-grow: 1; padding: 20px;">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            @Copyright
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.js"></script>
    <script src="https://kit.fontawesome.com/7a7c645416.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script>
        // Configure Toastr options
        toastr.options = {
            positionClass: "toast-top-center", // Set the notification position to center
            timeOut: 3000,
            closeButton: true,
            progressBar: true
        };
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
