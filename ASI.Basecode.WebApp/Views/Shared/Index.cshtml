<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - YourAppName</title>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/site.css" /> <!-- Link your CSS file -->
</head>
<body>
    <div style="display: flex; min-height: 100vh;">
        <!-- Sidebar -->
        <aside style="width: 250px; background-color: #B1A05D; padding: 20px; border-radius: 15px;">
            <div style="text-align: center; margin-bottom: 40px;">
                <img src="~/images/admin-avatar.jpg" alt="Admin Avatar" style="width: 100px; height: 100px; border-radius: 50%;" />
                <h3 style="margin-top: 10px; color: #000;">Example Admin</h3>
            </div>

            <nav style="display: flex; flex-direction: column; gap: 10px;">
                <a href="/AdminDashboard" style="color: #000; font-weight: bold; text-decoration: none; padding: 10px; background-color: #8E774D; border-radius: 8px;">Dashboard</a>
                <a href="/Users" style="color: #000; font-weight: bold; text-decoration: none; padding: 10px; background-color: #D8C582; border-radius: 8px;">Users</a>
                <a href="/Rooms" style="color: #000; font-weight: bold; text-decoration: none; padding: 10px; background-color: #D8C582; border-radius: 8px;">Manage Rooms</a>
                <a href="/Bookings" style="color: #000; font-weight: bold; text-decoration: none; padding: 10px; background-color: #D8C582; border-radius: 8px;">Bookings</a>
                <a href="/Analytics" style="color: #000; font-weight: bold; text-decoration: none; padding: 10px; background-color: #D8C582; border-radius: 8px;">Analytics</a>
                <a href="/Settings" style="color: #000; font-weight: bold; text-decoration: none; padding: 10px; background-color: #D8C582; border-radius: 8px;">Settings</a>
            </nav>

            <a href="/Account/Logout" style="margin-top: 20px; color: #000; font-weight: bold; text-decoration: none; padding: 10px; display: block; background-color: #8E774D; border-radius: 8px;">Log out</a>
        </aside>

        <!-- Main Content -->
        <main style="flex-grow: 1; padding: 20px;">
            @RenderBody()
        </main>
    </div>
</body>
</html>
