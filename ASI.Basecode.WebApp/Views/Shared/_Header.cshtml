@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<div class="sidebar">
<div class="@((ViewBag.LoginView == true) ? "hide-navbar" : "")">
    <div class="profile-section">
        <img src="~/img/profile-logo.png" alt="Profile Picture" class="profile-pic">
        <span class="username">@HttpContextAccessor.HttpContext.Session.GetString("UserName")</span>
    </div>

    <nav class="sidebar-nav">
        <a asp-controller="Home" asp-action="Index" class="nav-item @(Context.Session.GetString("IsDashboardActive") == "true" ? "active" : "")">
            <i class="fa-solid fa-house"></i> Dashboard
        </a>
        <a asp-controller="User" asp-action="UserManagement" class="nav-item @(Context.Session.GetString("IsUserManagementActive") == "true" ? "active" : "")">
            <i class="fa-solid fa-user"></i> Users
        </a>
        <a asp-controller="Room" asp-action="RoomManagement" class="nav-item @(Context.Session.GetString("IsRoomManagementActive") == "true" ? "active" : "")">
            <i class="fa-solid fa-door-closed"></i> Manage Rooms
        </a>
        <a asp-controller="Booking" asp-action="Index" class="nav-item @(Context.Session.GetString("IsBookingActive") == "true" ? "active" : "")">
            <i class="fa-solid fa-calendar"></i> Bookings
        </a>
        <a asp-controller="Analytics" asp-action="Index" class="nav-item @(Context.Session.GetString("IsAnalyticsActive") == "true" ? "active" : "")">
            <i class="fa-solid fa-chart-line"></i> Analytics
        </a>
        <a asp-controller="Settings" asp-action="Index" class="nav-item">
            <i class="fa-solid fa-gear"></i> Settings
        </a>
    </nav>

    <div class="logout">
        <a asp-action="SignOutUser" asp-controller="Account" class="logout-link">
            <i class="fa-solid fa-right-from-bracket"></i> Log out
        </a>
    </div>
</div>
</div>

<style>
    body {
        margin: 0;
        display: flex;
    }

    .sidebar {
        width: 220px;
        height: 100vh;
        background-color: #E2CD79;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding-top: 20px;
        box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
    }

    .profile-section {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 20px;
    }

    .profile-pic {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        margin-bottom: 10px;
    }

    .username {
        font-size: 16px;
        color: #333;
        font-weight: bold;
    }

    .sidebar-nav {
        display: flex;
        flex-direction: column;
        width: 100%;
    }

    .nav-item {
        display: flex;
        align-items: center;
        padding: 15px 20px;
        color: #333;
        text-decoration: none;
        font-size: 16px;
        font-weight: 500;
        transition: background-color 0.3s;
    }

        .nav-item i {
            margin-right: 10px;
            font-size: 18px;
        }

        .nav-item:hover,
        .nav-item.active {
            background-color: #BFAF5E;
            color: #fff;
        }

    .logout {
        margin-top: auto;
        width: 100%;
    }

    .logout-link {
        display: flex;
        align-items: center;
        padding: 15px 20px;
        color: #333;
        text-decoration: none;
        font-size: 16px;
        font-weight: 500;
        transition: background-color 0.3s;
    }

        .logout-link i {
            margin-right: 10px;
            font-size: 18px;
        }

        .logout-link:hover {
            background-color: #BFAF5E;
            color: #fff;
        }
</style>
