﻿@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<header class="@((ViewBag.LoginView == true) ? "hide-navbar" : "")">
    <div class="logosec hover-pointer">
        <img src="~/img/asi-logo-invert.svg"
             style="width: 185px;" alt="logo"
             onclick="window.location.href = '@(HttpContextAccessor.HttpContext.Session.GetString("Role") == "Admin" ? Url.Action("AdminDashboard", "Home") : Url.Action("UserDashboard", "Home"))';">
    </div>
    @if (ViewContext.RouteData.Values["controller"].ToString() == "Home" &&
    ViewContext.RouteData.Values["action"].ToString() == "AdminDashboard")
    {
        <a class="btn btn-link @(Context.Session.GetString("IsUserManagementActive") == "true" ? "active" : "")"
           asp-controller="User" asp-action="UserManagement" id="userManagementButton">
            Users
        </a>

        <a class="btn btn-link @(Context.Session.GetString("IsRoomManagementActive") == "true" ? "active" : "")"
           asp-controller="Room" asp-action="RoomManagement" id="roomManagementButton">
            Rooms
        </a>

        <a class="btn btn-link @(Context.Session.GetString("IsViewBookingActive") == "true" ? "active" : "")"
           asp-controller="BookingAdmin" asp-action="ViewBooking" id="ViewBookingButton">
            Booking
        </a>
    }

    @if (ViewContext.RouteData.Values["controller"].ToString() == "Home" &&
    ViewContext.RouteData.Values["action"].ToString() == "UserDashboard")
    {
        <a class="btn btn-link @(Context.Session.GetString("IsViewBookingActive") == "true" ? "active" : "")"
           asp-controller="BookingUser" asp-action="ViewBooking" id="viewBookingButton">
            Booking
        </a>
    }

    <div class="logosec">
        @HttpContextAccessor.HttpContext.Session.GetString("UserName")
        <div class="mr-20 hover-pointer" style="position: relative">
            <div class="dp">
                <img src="~/img/profile-logo.png"
                     class="dpicn hover-pointer"
                     alt="dp">
            </div>
            <div class="dropdown">
                <ul>
                    <li>
                        <i class="fa-solid fa-gear"></i>
                        <a href="#">Settings</a>
                    </li>
                    <li>
                        <i class="fa-solid fa-right-from-bracket"></i>
                        <a asp-action="SignOutUser" asp-controller="Account">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</header>