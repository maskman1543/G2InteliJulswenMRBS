@model LoginViewModel
@using static ASI.Basecode.Resources.Views.Screen
@section styles {
    <link rel="stylesheet" href="~/css/login.css" />
}
@{
    ViewBag.LoginView = true;
    ViewData["Title"] = "Login Page";
}
<div>
    @Html.AntiForgeryToken()
</div>
<div class="container py-5" style="display:flex; align-content:center;height:calc(100vh - 64px)">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-xl-10">
            <div class="card rounded-3 text-black">
                <div class="row g-0 w-100">
                    <div class="col-lg-6">
                        <div class="card-body p-md-5 mx-md-4">
                            <h1>WELCOME BACK!</h1>
                            <form method="post" action="/Account/Login" id="loginForm">
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="form2Example11">@UserId</label>
                                    <input type="text" id="form2Example11" class="form-control" asp-for="UserId" placeholder="Enter username" />
                                    <span asp-validation-for="UserId" class="text-danger"></span>
                                </div>
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="form2Example22">@Password</label>
                                    <input type="password" id="form2Example22" class="form-control" asp-for="Password" placeholder="Enter password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="text-center pt-1 mb-5 pb-1 d-flex flex-column align-items-center">
                                    <button class="btn btn-primary btn-block login-btn gradient-custom-2 mb-3" type="submit" style="color: black">
                                        @Login
                                    </button>
                                </div>

                                @if (!ViewBag.AdminExists)
                                {
                                    <div class="d-flex align-items-center justify-content-center pb-4">
                                        <a asp-controller="Account" asp-action="Register" class="btn btn-outline-danger">@CreateAdmin</a>
                                    </div>
                                }
                            </form>
                        </div>
                    </div>
                    <div class="col-lg-6 d-flex">
                        <img class="img-fluid" src="~/img/Mr.Booking.jpg" alt="Mr. Booking" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script>
        // Check for error message and display Toastr notification
        var errorMessage = '@TempData["ErrorMessage"]';
        if (errorMessage) {
            toastr.error(errorMessage); // Display error message using Toastr
        }
    </script>
}