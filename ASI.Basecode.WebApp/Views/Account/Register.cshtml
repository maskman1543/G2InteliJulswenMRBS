@using ASI.Basecode.Services.ServiceModels
@model UserViewModel
@{
    ViewBag.LoginView = true;
    ViewData["Title"] = "Register Page";
}
@section styles {
    <link rel="stylesheet" href="~/css/login.css" />
}
<div class="register-container" style="display: flex; align-items: center; justify-content: center; height: 100vh; background-color: #E2CD79;">
    <div class="register-card" style="display: flex; background-color: #A2996E; border-radius: 15px; padding: 20px;">
        <div style="padding: 40px; color: black;">
            <h2 style="font-size: 36px; font-weight: bold;">CREATE ACCOUNT</h2>
            <p>Already have an account? <a href="/Account/Login" style="color: #3267d6; font-weight: bold;">Log In</a></p>

            <form method="post" action="/Account/Register">
                <div class="form-group" style="margin-top: 20px;">
                    <label for="userId">UserId</label>
                    <input type="text" class="form-control" asp-for="UserId" placeholder="Enter userid" style="background-color: #E2CD79; border: none;" />
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>

                <div class="form-group" style="margin-top: 20px;">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" asp-for="Name" placeholder="Enter name" style="background-color: #E2CD79; border: none;" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group" style="margin-top: 20px;">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" asp-for="Password" placeholder="Enter password" style="background-color: #E2CD79; border: none;" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group" style="margin-top: 20px;">
                    <label for="confirmpassword">Confirm Password</label>
                    <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password" style="background-color: #E2CD79; border: none;" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div style="display: flex; flex-direction: column; align-items: center; margin-top: 20px;">
                    <button type="submit" class="btn btn-primary" style="background-color: #000; border: none; color: white; padding: 10px 40px; border-radius: 5px;">
                        Register
                    </button>
                    <a href="/Account/Login" style="margin-top: 10px; color: black;">&#8592 Back</a>
                </div>
            </form>
        </div>

        
    </div>
</div>

@section scripts {
    <script>
        var errorMessage = '@TempData["ErrorMessage"]';
        if (errorMessage) {
            toastr.error(errorMessage);
        }
    </script>
}
