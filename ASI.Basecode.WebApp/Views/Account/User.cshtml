<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="~/css/User.css">
</head>
<body>
    <div class="container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="profile">
                <img src="~/img/image1.jpg" alt="Profile Image" class="profile-img">
                <p>Example Admin</p>
            </div>
            <nav class="menu">
                <a href="#" class="menu-item">Dashboard</a>
                <a href="#" class="menu-item active">Users</a>
                <a href="#" class="menu-item">Manage Rooms</a>
                <a href="#" class="menu-item">Bookings</a>
                <a href="#" class="menu-item">Analytics</a>
                <a href="#" class="menu-item">Settings</a>
                <a href="#" class="menu-item logout">Log out</a>
            </nav>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <header class="header">
                <h2>User List</h2>
                <div class="search-add">
                    <input type="text" placeholder="Search..." class="search-bar">
                    <button class="add-user">+ Add User</button>
                </div>
            </header>

            <table class="user-table">
                <thead>
                    <tr>
                        <th>Last Name</th>
                        <th>First Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Besin</td>
                        <td>Christian</td>
                        <td>1234@gmail.com</td>
                        <td>User</td>
                        <td>
                            <span class="action-btn">...</span>
                            <button class="edit">✏️</button>
                            <button class="delete">🗑️</button>
                        </td>
                    </tr>
                    <!-- Repeat similar <tr> for each user -->
                </tbody>
            </table>
        </main>
    </div>
</body>
</html>
