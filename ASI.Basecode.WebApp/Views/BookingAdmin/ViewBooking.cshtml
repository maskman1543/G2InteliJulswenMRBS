@model IEnumerable<ASI.Basecode.Services.ServiceModels.BookingViewModel>

@{
    ViewData["Title"] = "ViewBooking";
}
<link href="~/css/dashboards.css" rel="stylesheet" />


<div class="list-container">
    <!-- Heading -->
    <div class="header d-flex align-items-center">
        <h1 class="title">Booking List</h1>
        <div class="search-bar">
            <input type="text" placeholder="Search..." />
            <button class="search-button">
                <i class="fa-solid fa-search"></i>
            </button>
        </div>
    </div>

    <!-- Booking List Table -->
    <div class="table-body">
        <div>
            <div class="table-header">
                <span>@Html.DisplayNameFor(model => model.Username)</span>
                <span>@Html.DisplayNameFor(model => model.RoomName)</span>
                <span>@Html.DisplayNameFor(model => model.StartDate)</span>
                <span>@Html.DisplayNameFor(model => model.StartTime)</span>
                <span>@Html.DisplayNameFor(model => model.EndTime)</span>
                <span>@Html.DisplayNameFor(model => model.Purpose)</span>
                <span>@Html.DisplayNameFor(model => model.Status)</span>
            </div>
        </div>
        <div>
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Username)</td>
                        <td>@Html.DisplayFor(modelItem => item.RoomName)</td>
                        <td>@item.StartDate.ToString("dd-MM-yyyy")</td>
                        <td>@item.StartTime.Hours.ToString("D2"):@item.StartTime.Minutes.ToString("D2")</td>
                        <td>@item.EndTime.Hours.ToString("D2"):@item.EndTime.Minutes.ToString("D2")</td>
                        <td>@Html.DisplayFor(modelItem => item.Purpose)</td>
                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    </tr>
                }
            }
            else
            {
                <div>
                    <div colspan="7" class="text-center">No Bookings found.</div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    body {
        font-family: Arial, sans-serif;
        color: #333;
        background-color: #F4F2E9;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    .booking-list-container {
        width: 90%;
        max-width: 1000px;
        padding: 20px;
        background-color: #E2CD79;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .header {
        padding-bottom: 15px;
        border-bottom: 1px solid #BFAF5E;
        margin-bottom: 20px;
    }

    .title {
        font-size: 1.8em;
        font-weight: bold;
        color: #333;
    }

    .booking-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
    }

        .booking-table th {
            background-color: #BFAF5E;
            color: white;
            padding: 12px 8px;
            text-align: left;
            font-weight: bold;
        }

        .booking-table td {
            background-color: #F4F2E9;
            padding: 10px 8px;
            color: #333;
            border-bottom: 1px solid #BFAF5E;
        }

        .booking-table tr:nth-child(even) td {
            background-color: #E9E8E0;
        }

        .booking-table th, .booking-table td {
            text-align: center;
        }

    .status-dropdown {
        padding: 6px;
        background-color: #E2CD79;
        border: 1px solid #BFAF5E;
        border-radius: 8px;
        color: #333;
    }

        .status-dropdown:focus {
            border-color: #A2945E;
            outline: none;
        }

    .text-center {
        color: #333;
    }

</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Listen for changes in the dropdown
            $('.status-dropdown').on('change', function () {
                var status = $(this).val(); // Get the selected status
                var bookingId = $(this).data('booking-id'); // Get the booking ID

                // Send an AJAX request to update the status
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("ChangeStatus", "BookingAdmin")', // Your controller action
                    data: {
                        bookingId: bookingId,
                        status: status
                    },
                    success: function (response) {
                        if (response.success) {
                            // Update the status text in the table cell without reloading the page
                            $('#status-' + bookingId).text(status);
                        } else {
                            alert(response.message); // Show an error message if something went wrong
                        }
                    },
                    error: function () {
                        alert('Error updating status. Please try again.');
                    }
                });
            });
        });
    </script>
}