@model ASI.Basecode.Services.ServiceModels.BookingViewModel

@{
    ViewData["Title"] = "Edit Booking";
}

<!-- Modal structure -->
<div class="modal fade" id="editBookingModal" tabindex="-1" aria-labelledby="editBookingModalLabel" aria-hidden="true">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/modal.css" />
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editBookingModalLabel">Edit Booking</h5>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="Edit" id="editBookingForm" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Purpose field -->
                    <div class="form-group">
                        <label for="Purpose" class="control-label">Purpose</label>
                        <input asp-for="Purpose" id="Purpose" class="form-control" required />
                        <span asp-validation-for="Purpose" class="text-danger"></span>
                    </div>

                    <!-- Start Date field -->
                    <div class="form-group">
                        <label for="startDate" class="control-label">Start Date</label>
                        <input type="date" asp-for="StartDate" class="form-control" id="startDate" required />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>

                    <!-- Start Time Dropdown -->
                    <div class="form-group">
                        <label for="startTime" class="control-label">Start Time</label>
                        <select asp-for="StartTime" class="form-control" id="startTime" required>
                            <option value="" selected disabled>Select Start Time</option>
                            <!-- Time options will be added dynamically -->
                        </select>
                        <span asp-validation-for="StartTime" class="text-danger"></span>
                    </div>

                    <!-- End Time Dropdown -->
                    <div class="form-group">
                        <label for="endTime" class="control-label">End Time</label>
                        <select asp-for="EndTime" class="form-control" id="endTime" required>
                            <option value="" selected disabled>Select End Time</option>
                            <!-- Time options will be added dynamically -->
                        </select>
                        <span asp-validation-for="EndTime" class="text-danger"></span>
                    </div>

                    <!-- Hidden RoomId -->
                    <input type="hidden" asp-for="RoomId" id="RoomId" />

                    <!-- Hidden BookingId -->
                    <input type="hidden" asp-for="BookingId" id="BookingId" />

                    <div class="form-group">
                        <input type="submit" value="Update Booking" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .modal-dialog {
        max-width: 500px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        margin-top: 5px;
    }

    .btn-primary {
        width: 100%;
    }
</style>
